# Use a base image with JDK and Gradle installedFROM gradle:latest AS buildWORKDIR /appCOPY build.gradle .COPY settings.gradle .COPY gradlew .COPY gradle ./gradle/COPY src ./src/RUN apt-get update && \    apt-get install -y dos2unix && \    apt-get clean && \    dos2unix gradlew && \    chmod +x gradlew && \    ./gradlew lib:build# Use a lighter base image for the runtimeFROM openjdk:latestWORKDIR /appCOPY --from=build /app/build/libs/*.jar app.jarEXPOSE 8080CMD ["java", "-jar", "app.jar"]